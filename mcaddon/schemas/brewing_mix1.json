{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["format_version", "minecraft:recipe_brewing_mix"],
  "properties": {
    "format_version": {
      "type": "string"
    },
    "minecraft:recipe_brewing_mix": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": {
          "type": "object",
          "required": ["identifier"],
          "properties": {
            "identifier": { "type": "string" }
          },
          "additionalProperties": false
        },
        "input": {
          "type": "string"
        },
        "output": {
          "type": "string"
        },
        "reagent": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
